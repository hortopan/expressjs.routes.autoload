{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "target": "es2019",
    "sourceMap": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": false,
    "sourceRoot": "src",
    "baseUrl": "src",
    "outDir": "dist",
    "strict": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "lib": [
      "es5",
      "es2015",
      "es2019.array"
    ]
  },
  "include": [
    "src"
  ]
}
